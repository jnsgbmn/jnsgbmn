{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "paths": {
      "components/*": ["components/*"],
      "utils/*": ["lib/utils/*"],
      "ui/*": ["components/ui/*"],
      "examples/*": ["components/examples/*"],
      "blocks/*": ["components/blocks/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
